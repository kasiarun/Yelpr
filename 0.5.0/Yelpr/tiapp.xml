<?xml version="1.0" encoding="UTF-8"?>
<ti:app xmlns:ti="http://ti.appcelerator.org">
	<id>com.appcelerator.yelpr</id>
	<name>Yelpr</name>
	<version>1.0</version>
	<icon>appicon.png</icon>
	<persistent-wifi>false</persistent-wifi>
	<prerendered-icon>false</prerendered-icon>
	<statusbar-style>opaque</statusbar-style>
	<windows>
		<window>
      <id>initial</id>
      <url>index.html</url>
      <backgroundColor>#dedede</backgroundColor>
      <icon>images/location.png</icon>
  		<barColor>#ff0000</barColor>
  		<fullscreen>false</fullscreen>
  		<title>Nearby</title>
    </window>
    <window>
      <id>search</id>
      <url>search.html</url>
      <backgroundColor>#dedede</backgroundColor>
      <icon>images/search.png</icon>
      <barColor>#ff0000</barColor>
  		<fullscreen>false</fullscreen>
  		<title>Search</title>
    </window>
	</windows>
</ti:app>
